@model IEnumerable<LinqMvcDemo.Models.ViewModels.DepartmentSummaryVm>

@{
    ViewData["Title"] = "Department Summary";
}
<h1>Department Summary</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Department</th><th>Count</th><th>Average Age</th>
    </tr>
  </thead>
  <tbody>
  @foreach (var row in Model)
  {
    <tr>
      <td>@row.Department</td>
      <td>@row.Count</td>
      <td>@row.AverageAge.ToString("F1")</td>
    </tr>
  }
  </tbody>
</table>

<p><a class="btn btn-secondary" asp-action="Index">Back</a></p>
