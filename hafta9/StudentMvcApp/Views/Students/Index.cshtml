@model IEnumerable<StudentMvcApp.Models.Student>
@{
    ViewData["Title"] = "Student List";
}
<h1>Student List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Student</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var s in Model)
    {        <tr>
            <td>@s.Id</td>
            <td>@s.Name</td>
            <td>@s.Age</td>
        </tr>
    }
    </tbody>
</table>